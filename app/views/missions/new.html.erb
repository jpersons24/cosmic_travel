<h1>Enter New Mission Details</h1>

<% if flash[:errors_array] %>
   <% flash[:errors_array].each do |error| %>
      <p style="color: red;"><%= error %></p>
   <% end %>
<% end %>

<%= form_for @mission do |f| %>
   <%= f.label "Mission Name:" %>
   <%= f.text_field :name %> <br>
   <%= f.label "Scientist:" %>
   <%= f.collection_select :scientist_id, Scientist.all, :id, :name %> <br>
   <%= f.label "Planet:" %>
   <%= f.collection_select :planet_id, Planet.all, :id, :name %> <br>

   <%= f.submit %>
<% end %>