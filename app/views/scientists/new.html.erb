<h1>Add New Scientist</h1>

<% if flash[:errors_array] %>
   <% flash[:errors_array].each do |error| %>
      <p style="color: red;"><%= error %></p>
   <% end %>
<% end %>


<%= form_for @scientist do |f| %>
   <%= f.label "Name:" %> 
   <%= f.text_field :name %> <br>
   <%= f.label "Field of Study:" %>
   <%= f.text_field :field_of_study %> <br>
   <%= f.submit %>
<% end %>